{% extends "base.html.twig" %}

{% block body %}
    <div class="row mb-3">
        <div class="col-lg bg-white responsive-padding border rounded responsive-margin">
            <div class="mb-4">
                <h3 class="text-uppercase title-margin"><span class="bg-dark text-white p-2">Nouvelle Langue</span></h3>
            </div>
            {{form_start(newLanguageForm)}}
                {{form_widget(newLanguageForm)}}
                {% include "commons/formButtons.html.twig" %}
            {{form_end(newLanguageForm)}}
        </div>
        <div class="col-lg bg-white responsive-padding border rounded">
            {% if languages is empty %}
                <p class="text-center fs-1 text text-secondary text-uppercase">Aucune langue n'a été ajoutée.</p>
            {% else %}
                    <div class="mb-4">
                        <h3 class="text-uppercase title-margin"><span class="bg-dark text-white p-2">Mes langues</span></h3>
                    </div>
                {% for language in languages %}
                    <div class="row mb-2 border-bottom pb-2">
                        <div class="col">{{language.name}}</div>
                        <div class="col text-start">{{language.level}} / 100</div>
                        <div class="col-2 text-end">
                            <a href="{{path('edit_language', {'id':language.id})}}" class="btn btn-secondary text-white">E</a>
                        </div>
                        <div class="col-2">
                            <a href="{{path('remove_language', {'id':language.id})}}" class="btn btn-danger text-white">X</a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}


